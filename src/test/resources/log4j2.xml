<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xml>
<Configuration status="WARN" strict="true">
    <Appenders>
        <Appender type="Console" name="STDOUT">
            <Layout type="PatternLayout" pattern="[%d{dd/MM/yyyy HH:mm:ss}] - %-4r [%t] %-5p %c %x - %m%n" />
        </Appender>
    </Appenders>

    <Loggers>
        <Logger name="fr.exagone" level="TRACE" additivity="false">
            <AppenderRef ref="STDOUT" />
        </Logger>

        <Root level="TRACE">
            <AppenderRef ref="STDOUT" />
        </Root>
    </Loggers>

</Configuration>